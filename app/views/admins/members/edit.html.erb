<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
      <div class="col-lg-8">
       <h2>会員情報編集</h2>
        <%= form_with model: @member, url: admins_member_path(@member), local: true do |f| %>
          <table class="table">
            <tr>
              <th>氏名</th>
              <th><%= f.text_field :lastname, class: 'form-control' %></th>
              <th><%= f.text_field :firstname, class: 'form-control' %></th>
            </tr>
            <tr>
              <th>フリガナ</th>
              <th><%= f.text_field :lastruby, class: 'form-control' %></th>
              <th><%= f.text_field :firstruby, class: 'form-control' %></th>
            </tr>
            <tr>
              <th>郵便番号(ハイフンなし)</th>
              <th>&nbsp; &nbsp; <%= f.text_field :zip, class: 'form-control' %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th>&nbsp; &nbsp; <%= f.text_field :address, class: 'form-control' %></th>
            </tr>
            <tr>
              <th>電話番号(ハイフンなし)</th>
              <th>&nbsp; &nbsp; <%= f.text_field :tel, class: 'form-control' %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></th>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <th>
                <%= f.radio_button :status, true %>
                <%= f.label :status, "退会", value: true %>
                <%= f.radio_button :status, false %>
                <%= f.label :status, "有効", value: false %>
              </th>
            </tr>
          </table>
          <%= f.submit "編集内容を保存", class: "btn btn-secondary" %>
        <% end %>
      <div class="col-lg-3"></div>
    </div>
  </div>
</div>