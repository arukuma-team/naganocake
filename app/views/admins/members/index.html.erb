<div class='container'>
  <div class='row'>
    <h1>会員一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>氏名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= link_to "#{member.lastname} #{member.firstname}", admins_member_path(member.id) %></td>
            <td>
              <% if member.status? %>
               <h5><span class="badge rounded-pill bg-danger">退会</span></h5>
              <% else %>
               <h5><span class="badge rounded-pill bg-primary">有効</span></h5>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>