<div class='container'>
  <div class='row'>
    <h2>会員詳細</h2>
    <div class =col>
      <%= link_to '編集', edit_admins_member_path(@member), class: "btn btn-sm btn-success edit_admins_member_#{@member.id}" %>
    </div>
  </div>
  <div class='row'>
    <table>
      <tr>
        <th>氏名</th><td colspan="2"><%= @member.lastname %></td><td><%= @member.firstname %></td>
      </tr>
      <tr>
        <th>カナ</th><td colspan="2"><%= @member.lastruby %></td><td><%= @member.firstruby %></td>
      </tr>
      <tr>
        <th>郵便番号</th><td><%= @member.zip %></td>
      </tr>
      <tr>
        <th>住所</th><td><%= @member.address %></td>
      </tr>
      <tr>
        <th>電話番号</th><td><%= @member.tel %></td>
      </tr>
      <tr>
        <th>メールアドレス</th><td><%= @member.email %></td>
      </tr>
      <tr>
        <th>配送先</th> <td><%= link_to '一覧を見る', class: "btn btn-sm btn-primary" %></td>
      </tr>
      <tr>
        <th>注文履歴</th><td><%= link_to '一覧を見る', class: "btn btn-sm btn-primary" %></td>
      </tr>
    </table>
  </div>
</div>