<div class='container'>
  <div class='row'>
    <h1>商品一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>商品名</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= attachment_image_tag item, :picture, :fill, 100, 100, format: 'jpeg' %></td>
            <td><%= link_to item.name, members_item_path(item), class: "item_#{item.id}" %></td>
            <td>
              <h5><span class="badge rounded-pill bg-primary">カテゴリー</span><h5>
            </td>
            <td>
              <% if item.status? %>
               <h5><span class="badge rounded-pill bg-success">販売中</span></h5>
              <% else %>
               <h5><span class="badge rounded-pill bg-secondary">販売停止中</span></h5>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>