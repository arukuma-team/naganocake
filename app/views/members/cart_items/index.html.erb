<h2>カート内アイテム</h2>

<table class="table">
　<thead>
	<tr>
     <th>商品名</th>
     <th>単価</th>
	   <th>数量</th>
	   <th>小計</th>
	  <th></th>
	</tr>
  </thead>
  
  <tbody>
		<% @cart_items.member.each do |cart_item| %>
		<tr>
		    <td><%= cart_item.item.name %></td>
		    <td><%= cart_item.piece.price %></td>
		    <td><%= f.number_field :piece ,value: cart_item.piece%></td>
		    <td></td>
		    <td><%= link_to "削除", members_cart_item_path(cart_item), method: :delete, data: {confirm: "#{cart_item.product.name}を削除してよろしいですか？"} %></td>
		
		</tr>
		<% end %>
		

	</tbody>
</table>


  <p>合計金額</p>
　<p><%= link_to '買い物を続ける', items_path, :class  %></p>
　<p><%= link_to "カートを空にする", delete_item_path, method: :delete, data: { confirm: "カートを空にしてもよろしいでしょうか？" } %></p>



