<div class="container">
  <h4>注文情報確認</h4>
    <div class="row">
          <div class="col">
            <table>
              <thead>
                <tr>
                  <th>商品名</th>
                  <th>単価(税込)</th>
                  <th>数量</th>
                  <th>小計</th>
                </tr>
              </thead>
              <tbody>
                <%# @sum = 0 %>
                <%# @cart_items.each do |cart_item| %>
                  <tr>
                    <td><%#= cart_item.item.name  %></td>
                    <td><%#= cart_item.item.add_tax_price %></td>
                    <td><%#= cart_item.amount %></td>
                    <td><%#= cart_item.item.add_tax_price * cart_item.amount %></td>
                  </tr>
                <%# @sum += cart_item.item.add_tax_price * cart_item.amount %>
                <%# end %>
              </tbody>
            </table>
          </div>
          <div class="col">
            <table>
              <tr>
                <th>送料</th>
                <td><%= @order.shipping_fee %></td>
              </tr>
              <tr>
                <th>商品合計</th>
                <td><%= @sum %></td>
              </tr>
              <tr>
                <th>請求金額</th>
                <td><%#= @order.shipping_fee + @sum %></td>
              </tr>
            </table>
          </div>
          <div class="container">
            <h5>支払方法</h5>
              <%= @order.payment_method %><br>
          </div>
          <div class="container">
            <h5>お届け先</h5>
            <span>〒</span>
            <%#= @order.zip %><br>
            <%#= @order.address %><br>
            <%#= @order.name %><br>
          </div>
          <div class="container">
            <div class="col-5 confirm_image"></div>
              <div class="col-6">
                <%= form_with model:@order, url: orders_confirm_path, local:true do |f| %>
                  <%= f.hidden_field :payment_method %>
                  <%= f.hidden_field :postcode %>
                  <%= f.hidden_field :address %>
                  <%= f.hidden_field :name %>
                  <%= f.hidden_field :shipping_fee %>
                  <%#= f.hidden_field :bill, value: @sum + @order.shipping_fee %>
                  <%= f.submit "注文確定" %>
              </div>
                <% end %>
  </div>
</div>