  <body class="bg-light">
    <div class="container">
      <div class="col-md-7 col-lg-8">
        <h2 class="mb-3">注文情報入力</h2>
       <%= form_with(model:@order, url: members_orders_confirm_path, local: true) do |f| %>
               <h3>支払い方法</h3>
                <%= f.radio_button :payment_method, :クレジットカード,  checked: "checked" %>
                <%= f.label :payment_method, "クレジットカード" %><br>
                <%= f.radio_button :payment_method, :銀行振込 %>
                <%= f.label :payment_method, "銀行振込" %>
                
              <div class="mt-2">
                 <h3>お届け先</h3>
                   <%= f.radio_button :address_num,0 %>
                   <%= f.label :address, "登録済み住所選択" %>
                   <div class="ml-3">
                     <%= f.collection_select(:address_id, @addresses, :id, :view_address, {prompt: "選択してください"}, {class: "form-control"}) %>
                   </div>
                   <%= f.radio_button :address_num,1 %>
                   <%= f.label :address, "新しいお届け先" %>
                   <div class="col-sm-6">
                      <%= f.label :"郵便番号(ハイフンなし)" %>
                      <%= f.text_field :delivery_zip, placeholder: "郵便番号", class: "form-control"%>
                   </div>
                   <div class="col-sm-6">
                     <%= f.label :"住所" %>
                     <%= f.text_field :delivery_address, placeholder: "住所", class: "form-control" %>
                   </div>
                   <div class="col-sm-6">
                     <%= f.label :"宛名" %>
                     <%= f.text_field :delivery_name, placeholder: "宛名", class: "form-control" %>
                   </div>
                   <div class="my-3 mr-3">
                     <%= f.submit "注文確認" %>
                   </div>
                  <% end %>
               </div>
         </div>
      </div>
</body>
