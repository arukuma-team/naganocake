<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="head-line title_h2 text-center">注文情報入力</h2>
          <%= form_with(model:@order, url: orders_confirm_path, local: true) do |f| %>
            <h3>支払い方法</h3>
                <%= f.radio_button :payment_way, :クレジットカード,  checked: "checked" %>
                <%= f.label :payment_method, "クレジットカード" %>
                <%= f.radio_button :payment_way, :銀行振込 %>
                <%= f.label :payment_method, "銀行振込" %>
            <h3>お届け先</h3>
                <div>
                 <%= f.radio_button :address_num,0 %>
                <%= f.label :address, "登録済み住所選択" %>
                <%= f.collection_select(:address_id, @addresses, :id, :view_address, include_blank: '選択してください') %>

                <div>
                <%= f.radio_button :address_num,1 %>
                <%= f.label :address, "新しいお届け先" %>
                </div>
                <div>
                <%= f.label :"郵便番号(ハイフンなし)" %>
                <%= f.text_field :zip, placeholder: "郵便番号" %><br>
                <%= f.label :"住所" %>
                <%= f.text_field :address, placeholder: "住所" %><br>
                <%= f.label :"宛名" %>
                <%= f.text_field :name, placeholder: "名前" %><br>
                </div>
                <%= f.submit "注文確認" %>
          <% end %>
      </div>
    </div>
  </div>
