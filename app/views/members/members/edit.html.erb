  <body class="bg-light">

    <div class="container">


      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">会員情報編集</h4>
        <%= form_with model: @member, url: members_member_path, local:true do |member| %>


          <div class="row g-3">
            <div class="col-sm-6">
              <label>性</label>
              <%= member.text_field :lastname, class: "form-control"%>
            </div>

            <div class="col-sm-6">
              <label>名</label>
              <%= member.text_field :firstname, class: "form-control" %>
            </div>

            <div class="col-sm-6">
              <label>セイ</label>
               <%= member.text_field :lastruby, class: "form-control"%>
            </div>

            <div class="col-sm-6">
              <label>メイ</label>
               <%= member.text_field :firstruby, class: "form-control" %>
            </div>

            <div class="col-12">
              <label>メールアドレス</label>
              <div class="input-group has-validation">
                <span class="input-group-text">@</span>
               <%= member.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>

            <div class="col-12">
              <label>郵便番号</label>
              <%= member.text_field :zip, class: "form-control" %>
            </div>

            <div class="col-12">
              <label>住所</label>
              <%= member.text_field :address, class: "form-control" %>
            </div>

            <div class="col-12">
              <label>電話番号</label>
              <%= member.text_field :tel, class: "form-control" %>
            </div>

           <div class="m-3 ">
           <%= member.submit "編集完了", class: "btn btn-success" %>
           </div>
           <% end %>

           <div class="m-3">
           <%= link_to '退会する', members_quit_members_path, class: "btn btn-secondary" %>
           </div>


     </div>
    </div>

  </body>

